{
  "name": "@miko/oracle-mock",
  "version": "1.0.0",
  "description": "A reusable oracle-mock module for simulating and testing on-chain price feeds in Ethereum development and integration workflows.",
  "main": "index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "fork": "npx hardhat node",
    "fork:anvil": "tsx scripts/start-anvil.ts",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:integration": "npx hardhat test test/integration/*.test.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/A-Miko/oracle-mock.git"
  },
  "keywords": [
    "defi",
    "oracle",
    "chainlink",
    "testing",
    "fork",
    "compound",
    "aave",
    "morpho"
  ],
  "author": "Avril Verhaeghen",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/A-Miko/oracle-mock/issues"
  },
  "homepage": "https://github.com/A-Miko/oracle-mock#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-ignition": "^0.15.15",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.16",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/ignition-core": "^0.15.14",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^1.6.1",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typechain": "^8.3.2",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
